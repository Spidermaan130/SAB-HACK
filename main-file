-- 2. MUTATION GUI (BELOW SELECTION)
local SelectedMut = "None"
MainTab:CreateDropdown({
   Name = "3. Select Mutation (Traits Wiki)",
   Options = Mutations,
   CurrentOption = {"None"},
   Callback = function(Option) SelectedMut = Option[1] end,
})

-- 3. EXECUTION: LOOP (LEFT) & SPAWN (RIGHT)
MainTab:CreateSection("Execution Control")
local Looping = false

local function PerformSpawn()
    if SelectedRot == "None" then return end
    -- Finds the game's RemoteEvent automatically
    local Remote = game:GetService("ReplicatedStorage"):FindFirstChild("SpawnEvent") or 
                 game:GetService("ReplicatedStorage"):FindFirstChildOfClass("RemoteEvent")
    
    if Remote then
        Remote:FireServer(SelectedRot, SelectedMut, game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame)
    end
end

-- LOOP BUTTON ON THE LEFT
MainTab:CreateToggle({
   Name = "Loop Spawning [ON/OFF]",
   CurrentValue = false,
   Flag = "LoopLeft",
   Callback = function(Value)
      Looping = Value
      task.spawn(function()
         while Looping do
            PerformSpawn()
            task.wait(0.25) -- High performance delay for Delta
         end
      end)
   end,
})

-- SPAWN BUTTON
MainTab:CreateButton({
   Name = "ðŸš€ SPAWN SELECTED",
   Callback = function()
      PerformSpawn()
      Rayfield:Notify({Title = "Success", Content = "Injected " .. SelectedRot, Duration = 2})
   end,
})

