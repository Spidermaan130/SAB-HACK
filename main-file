    ["Secret"] = {"Dragon Cannelloni", "Spaghetti Tualetti", "Garama and Madundung", "67", "Alessio", "Carloo", "Guerriro Digitale", "Los Tacoritas"},
    ["Brainrot God"] = {"Vampira Cappucina", "Espresso Signora", "Tigroligre Frutonni", "Piccionetta Macchina", "Anpali Babel"},
