local MainTab = Window:CreateTab("Wiki Spawner", 4483362458)

-- 1. SELECT BRAINROT (GUI TOP)
local SelectedRot = "Skibidi Toilet"
local SelectedRarity = "OG"

MainTab:CreateDropdown({
   Name = "1. Select Rarity",
   Options = {"OG", "Secret", "Brainrot God", "Mythic", "Legendary", "Epic", "Rare/Common"},
