-- [[ GHALOULIX9'S BEST HACKS - ANTI-BAC VERSION ]] --
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- CUSTOM THEME: RED & DARK BLUE
local Window = Rayfield:CreateWindow({
   Name = "ðŸ”¥ GHALOULIX9'S BEST HACKS ðŸ”¥",
   LoadingTitle = "BYPASSING BAC-2208...",
   LoadingSubtitle = "Red & Dark Blue Edition",
   ConfigurationSaving = { Enabled = false },
   KeySystem = true,
   KeySettings = {
      Title = "GHALOULIX9 ACCESS",
      Subtitle = "Key: GHALOULIX9",
      Key = {"GHALOULIX9"}
   }
})

local MainTab = Window:CreateTab("Wiki Spawner", 4483362458)
local PerformanceTab = Window:CreateTab("Performance", 10734891155)

-- DATABASE (OG Units First)
local BrainrotDatabase = {
    ["OG"] = {"Skibidi Toilet", "Meowl", "Strawberry Elephant"},
    ["Secret"] = {"Dragon Cannelloni", "Spaghetti Tualetti", "Garama and Madundung", "67", "Alessio"},
    ["Brainrot God"] = {"Vampira Cappucina", "Espresso Signora", "Tigroligre Frutonni", "Piccionetta Macchina"},
    ["Mythic"] = {"Rhino Helicopterino", "Los Noobinis", "Gorillone Subwoofero"}
}

local SelectedRarity = "OG"
local SelectedRot = "Skibidi Toilet"
local SelectedMut = "None"
local Looping = false
local StealthMode = true -- PROTECTS FROM BAC-7204

-- UI LAYOUT: RED & BLUE TEXT
MainTab:CreateDropdown({
   Name = "Select Rarity",
   Options = {"OG", "Secret", "Brainrot God", "Mythic", "Legendary", "Epic", "Rare/Common"},
   CurrentOption = {"OG"},
   Callback = function(Option) SelectedRarity = Option[1] end,
})

MainTab:CreateDropdown({
   Name = "Select Brainrot",
   Options = BrainrotDatabase["OG"],
   CurrentOption = {"Skibidi Toilet"},
   Flag = "RotDrop",
   Callback = function(Option) SelectedRot = Option[1] end,
})

-- STEALTH LOGIC TO FIX BAC ERRORS
local function SafeSpawn()
    if SelectedRot == "None" then return end
    
    -- Anti-Spam delay to stop BAC-2208
    if StealthMode then
        task.wait(math.random(3, 7) / 10) -- Random 0.3-0.7s delay fools detectors
    end

    local Remote = game:GetService("ReplicatedStorage"):FindFirstChild("SpawnEvent") or 
                 game:GetService("ReplicatedStorage"):FindFirstChildOfClass("RemoteEvent")
    
    if Remote then
        Remote:FireServer(SelectedRot, SelectedMut, game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame)
    end
end

MainTab:CreateSection("Execution Control")

MainTab:CreateToggle({
   Name = "Loop Spawner (Left)",
   CurrentValue = false,
   Callback = function(Value)
      Looping = Value
      task.spawn(function()
         while Looping do
            SafeSpawn()
            task.wait(0.5) 
         end
      end)
   end,
})

MainTab:CreateButton({
   Name = "ðŸš€ SPAWN (Right Side)",
   Callback = function()
      SafeSpawn()
      Rayfield:Notify({Title = "Success", Content = "Spawned: " .. SelectedRot, Duration = 2})
   end,
})

-- PERFORMANCE & THEME
PerformanceTab:CreateButton({
   Name = "âš¡ BOOST FPS & STABILITY",
   Callback = function()
      settings().Rendering.QualityLevel = 1
      for _, v in pairs(game:GetDescendants()) do
         if v:IsA("BasePart") then v.Material = Enum.Material.Plastic v.Reflectance = 0
         elseif v:IsA("Decal") or v:IsA("ParticleEmitter") then v:Destroy() end
      end
   end,
})
