    ["Legendary"] = {"Chef Crabracadabra", "Pandaccini Bananini", "Sigma Girl", "Lionel Cactuseli", "Tirilikalika"},
    ["Epic"] = {"Bananita Dolphinita", "Cappuccino Assassino", "Bandito Axolito", "Frogatto Piratto"},
    ["Rare/Common"] = {"Noobini Pizzanini", "Lirili Larila", "Tim Cheese", "FluriFlura", "Pipi Avocado"}
}

local WikiMutations = {"None", "Bronze", "Silver", "Emerald", "Gold", "Diamond", "Rainbow", "Galaxy", "Nuclear", "Yin Yang", "Shadow", "Glitched", "Celestial", "Radioactive"}

local Window = Rayfield:CreateWindow({
   Name = "ðŸ”¥ GHALOULIX9'S BEST HACKS ðŸ”¥",
   LoadingTitle = "DELTA NEW VERSION DETECTED...",
   LoadingSubtitle = "By GHALOULIX9 | High-Performance Mode",
   ConfigurationSaving = { Enabled = false },
   KeySystem = true,
   KeySettings = {
      Title = "GHALOULIX9 ACCESS",
      Subtitle = "No Discord Required!",
      Key = {"GHALOULIX9"} -- YOUR KEY
   }
})

local MainTab = Window:CreateTab("Wiki Spawner", 4483362458)

-- 1. SELECTION (TOP)
local SelectedRarity = "OG"
local SelectedRot = "Skibidi Toilet"

MainTab:CreateDropdown({
   Name = "1. Rarity (OG First)",
   Options = {"OG", "Secret", "Brainrot God", "Mythic", "Legendary", "Epic", "Rare/Common"},
   CurrentOption = {"OG"},
   Callback = function(Option) SelectedRarity = Option[1] end,
})

MainTab:CreateDropdown({
   Name = "2. Brainrot (217+ Items)",
   Options = BrainrotDatabase["OG"],
   CurrentOption = {"Skibidi Toilet"},
   Flag = "RotDrop",
   Callback = function(Option) SelectedRot = Option[1] end,
})

-- 2. MUTATIONS (MIDDLE)
local SelectedMut = "None"
MainTab:CreateDropdown({
   Name = "3. Mutation (Wiki Traits)",
   Options = WikiMutations,
   CurrentOption = {"None"},
   Callback = function(Option) SelectedMut = Option[1] end,
})

-- 3. EXECUTION: LOOP (LEFT) & SPAWN (RIGHT)
MainTab:CreateSection("Execution Control")
local Looping = false

local function PerformSpawn()
    if SelectedRot == "None" then return end
    -- Delta v2026 Optimized Remote Handling
    local Remote = game:GetService("ReplicatedStorage"):FindFirstChild("SpawnEvent") or 
                 game:GetService("ReplicatedStorage"):FindFirstChildOfClass("RemoteEvent")
    if Remote then
        Remote:FireServer(SelectedRot, SelectedMut, game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame)
    end
end

-- LAYOUT: LOOP ON LEFT, SPAWN ON RIGHT
MainTab:CreateToggle({
   Name = "Loop Spawning (Left)",
   CurrentValue = false,
   Flag = "LoopToggle",
   Callback = function(Value)
      Looping = Value
      task.spawn(function()
         while Looping do
            PerformSpawn()
            task.wait(0.15) -- Even faster on the new Delta!
         end
      end)
   end,
})

MainTab:CreateButton({
   Name = "ðŸš€ SPAWN SELECTED (Right)",
   Callback = function()
      PerformSpawn()
      Rayfield:Notify({Title = "Ghaloulix9 Success", Content = "Spawned: " .. SelectedRot, Duration = 2})
   end,
})

-- BEAUTIFUL LOAD NOTIFICATION
Rayfield:Notify({
   Title = "GHALOULIX9 LOADED",
   Content = "Optimized for Delta v2026. OG Units Active.",
   Duration = 5,
})
