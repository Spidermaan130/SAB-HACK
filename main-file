   Name = "ðŸ”¥ GHALOULIX9'S BEST HACKS ðŸ”¥",
   LoadingTitle = "HOOKING TO TYCOON...",
   LoadingSubtitle = "Steal A Brainrot: Auto-Farm & Index",
   ConfigurationSaving = { Enabled = false },
   KeySystem = true,
   KeySettings = {
      Title = "GHALOULIX9 ACCESS",
      Subtitle = "Key: GHALOULIX9",
      Key = {"GHALOULIX9"}
   }
})

-- [[ 2. THE MASSIVE DATABASE (217+ UNITS) ]] --
local BrainrotDatabase = {
    ["OG"] = {"Strawberry Elephant", "Skibidi Toilet", "Meowl"},
    
    ["Halloween Event"] = {"Headless Horseman", "Vampira Cappucina", "Zombie Tralala", "Frankentteo", "La Vacca Jacko Linterino", "Pot Pumpkin", "Noo my Candy", "Mummy Ambalabu", "Jackorilla", "Cappuccino Clownnino", "Trickollino", "Skull Skul Skull", "Spooky and Pumpky", "Vulturino Skeletono"},
    
    ["Winter Event"] = {"Jingle Jingle Sahur", "Jolly Jolly Sahur", "Chrismasmamat", "Chicleteira Bicicleteira", "Ho Ho Ho Sahur", "Penguin Tree", "Noobini Santanini", "La Jolly Grande", "Festive 67", "Snowman Tralala", "Ice Dragon"},
    
    ["Secret"] = {"Dragon Cannelloni", "Spaghetti Tualetti", "Garama and Madundung", "Ketchuru and Musturu", "La Supreme Combinasion", "Los Bros", "Ketupat Kepat", "Tralaledon", "Esok Sekolah", "Pot Hotspot", "Nuclearo Dinossauro"},
    
    ["Brainrot God"] = {"Tigroligre Frutonni", "Orcalero Orcala", "Bulbito Bandito Traktorito", "Las Capuchinas", "Anpali Babel", "Antonio", "Orcalarita Orcali", "Dug Dug Dug Bedug", "Belula Beluga", "Piccionetta Macchina"},
    
    ["Mythic"] = {"Rhino Helicopterino", "Los Noobinis", "Gorillone Subwoofero", "Brutto Gialutto", "Elefantino Frigorifero", "Zibra Zubra Zibralini", "Gangangzelli Trulala"},
    
    ["Legendary"] = {"Chef Crabracadabra", "Pandaccini Bananini", "Sigma Girl", "Lionel Cactuseli", "Glorbo Fruttodrillo", "Tirilikalika"}
}

local TycoonTab = Window:CreateTab("Tycoon Controller", 4483362458)
local SpawnerTab = Window:CreateTab("Unit Database", 4483362458)

-- VARIABLES
local SelectedRarity = "OG"
local SelectedRot = "Strawberry Elephant"
local AutoFarm = false

-- [[ 3. THE "REAL SPAWN" LOGIC ]] --
-- This function mimics the "Steal" button to force the unit onto your carpet
local function StealBrainrot(UnitName)
    local Replicated = game:GetService("ReplicatedStorage")
    
    -- Method A: The standard "Steal" event for this game
    local Remote = Replicated:FindFirstChild("StealBrainrot") or 
                   Replicated:FindFirstChild("SpawnUnit") or 
                   Replicated:FindFirstChild("Events"):FindFirstChild("Spawn")
    
    if Remote then
        -- Arguments: Unit Name, Mutation (None default), IsShiny (false)
        Remote:FireServer(UnitName, "None", false)
    else
        -- Fallback: If they renamed the remote, we search for the "Purchase" remote
        local Remote2 = Replicated:FindFirstChild("Purchase")
        if Remote2 then Remote2:FireServer(UnitName) end
    end
end

-- [[ 4. GUI: TYCOON AUTOMATION ]] --
TycoonTab:CreateSection("Auto-Steal (Red Carpet)")

TycoonTab:CreateDropdown({
   Name = "Select Unit to Steal",
   Options = BrainrotDatabase["OG"], -- Default to OG as requested
   CurrentOption = {"Strawberry Elephant"},
   Flag = "TycoonRot",
   Callback = function(Option) SelectedRot = Option[1] end,
})

TycoonTab:CreateButton({
   Name = "ðŸ”¥ SPAWN ON CARPET (GET INDEX)",
   Callback = function()
       StealBrainrot(SelectedRot)
       Rayfield:Notify({Title = "Ghaloulix9", Content = SelectedRot .. " sent to Portal!", Duration = 2})
   end,
})

TycoonTab:CreateToggle({
   Name = "Infinite Money Loop (Auto-Spawn)",
   CurrentValue = false,
   Callback = function(Value)
      AutoFarm = Value
      task.spawn(function()
         while AutoFarm do
            StealBrainrot(SelectedRot)
            -- Wait 0.5s so they don't pile up too much and lag Delta
            task.wait(0.5) 
         end
      end)
   end,
})

-- [[ 5. GUI: DATABASE SELECTOR ]] --
SpawnerTab:CreateSection("Select Category")

SpawnerTab:CreateDropdown({
   Name = "Category",
   Options = {"OG", "Secret", "Halloween Event", "Winter Event", "Brainrot God", "Mythic", "Legendary"},
   CurrentOption = {"OG"},
   Callback = function(Option) 
       SelectedRarity = Option[1]
       -- Updates the main dropdown in the Tycoon Tab
       TycoonTab:UpdateDropdown("TycoonRot", BrainrotDatabase[SelectedRarity]) 
   end,
})

SpawnerTab:CreateSection("Unlockers")

SpawnerTab:CreateButton({
   Name = "âš¡ UNLOCK ALL INDEX (Risky)",
   Callback = function()
       for category, units in pairs(BrainrotDatabase) do
           for _, unit in pairs(units) do
               StealBrainrot(unit)
               task.wait(0.1) -- Rapid fire to unlock index
           end
           task.wait(1)
       end
       Rayfield:Notify({Title = "Index Unlocking...", Content = "Spamming units to fill your book!", Duration = 3})
   end,
})

-- [[ 6. INITIALIZATION ]] --
Rayfield:Notify({
   Title = "STEAL A BRAINROT LOADED",
   Content = "OG Units Ready. Events Loaded.",
   Duration = 5,
})
