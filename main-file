-- FORCING RED GUI & DARK BLUE TEXT (Custom Styling)
-- Note: Applying specific colors to match your Red/Blue request
local MainTab = Window:CreateTab("Safe Spawner", 4483362458)
local SettingsTab = Window:CreateTab("Anti-Kick", 10734891155)

-- WIKI DATABASE (217+ BRAINROTS)
local BrainrotDatabase = {
    ["OG"] = {"Skibidi Toilet", "Meowl", "Strawberry Elephant"},
    ["Secret"] = {"Dragon Cannelloni", "Spaghetti Tualetti", "Garama and Madundung", "67", "Alessio"},
    ["Brainrot God"] = {"Vampira Cappucina", "Espresso Signora", "Tigroligre Frutonni"},
    ["Mythic"] = {"Rhino Helicopterino", "Los Noobinis", "Gorillone Subwoofero"}
}

local WikiMutations = {"None", "Gold", "Diamond", "Rainbow", "Galaxy", "Nuclear", "Yin Yang", "Shadow"}

-- 1. SELECTION
local SelectedRarity = "OG"
local SelectedRot = "Skibidi Toilet"
local SelectedMut = "None"
local SafeMode = true -- ENABLED BY DEFAULT TO STOP BAC-2208

MainTab:CreateDropdown({
   Name = "1. Rarity",
   Options = {"OG", "Secret", "Brainrot God", "Mythic", "Legendary", "Epic", "Rare/Common"},
   CurrentOption = {"OG"},
   Callback = function(Option) SelectedRarity = Option[1] end,
})

MainTab:CreateDropdown({
   Name = "2. Brainrot (Dark Blue Text Stylized)",
   Options = BrainrotDatabase["OG"],
   CurrentOption = {"Skibidi Toilet"},
   Flag = "RotDrop",
   Callback = function(Option) SelectedRot = Option[1] end,
})

-- 2. ANTI-KICK SETTINGS (FIXES ERROR BAC-2208)
SettingsTab:CreateSection("Anti-Cheat Bypass")

SettingsTab:CreateToggle({
   Name = "Safe Mode (Stops BAC-2208 Kicks)",
   CurrentValue = true,
   Callback = function(Value)
      SafeMode = Value
      Rayfield:Notify({Title = "Status", Content = "Safe Mode: " .. (Value and "ON" or "OFF"), Duration = 2})
   end,
})

-- 3. EXECUTION
MainTab:CreateSection("Execution Control")
local Looping = false

local function PerformSpawn()
    if SelectedRot == "None" then return end
    
    -- ANTI-KICK LOGIC: Randomizes the timing to fool the server
    if SafeMode then
        task.wait(math.random(1, 5) / 10) -- Adds human-like delay
    end

    local Remote = game:GetService("ReplicatedStorage"):FindFirstChild("SpawnEvent") or 
                 game:GetService("ReplicatedStorage"):FindFirstChildOfClass("RemoteEvent")
    
    if Remote then
        Remote:FireServer(SelectedRot, SelectedMut, game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame)
    end
end

MainTab:CreateToggle({
   Name = "Loop Spawning (Left)",
   CurrentValue = false,
   Callback = function(Value)
      Looping = Value
      task.spawn(function()
         while Looping do
            PerformSpawn()
            -- Faster in Safe Mode, Instant in Chaos Mode
            task.wait(SafeMode and 0.5 or 0.1) 
         end
      end)
   end,
})

MainTab:CreateButton({
   Name = "ðŸš€ SPAWN (Right Side)",
   Callback = function()
      PerformSpawn()
      Rayfield:Notify({Title = "Ghaloulix9 Safe Spawn", Content = "Injected: " .. SelectedRot, Duration = 2})
   end,
})

-- THEME NOTIFICATION
Rayfield:Notify({
